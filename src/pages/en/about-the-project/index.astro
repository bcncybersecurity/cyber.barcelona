---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/screens/Header.astro';
import Footer from '../../../components/screens/Footer.astro';
import BigTitle from '../../../components/primitives/text/BigTitle.astro';
import MediumTitle from '../../../components/primitives/text/MediumTitle.astro';
import Paragraph from '../../../components/primitives/text/Paragraph.astro';
import TeamMemberCard from '../../../components/blocks/TeamMemberCard.astro';
import olmoPhoto from '../../../../public/img/pictures/olmo.jpg'
import lauraPhoto from '../../../../public/img/pictures/laura.jpg'
import eduPhoto from '../../../../public/img/pictures/edu.jpg'
import eliasPhoto from '../../../../public/img/pictures/elias.jpg'
import ivanPhoto from '../../../../public/img/pictures/ivan.jpeg'
import neusPhoto from '../../../../public/img/pictures/neus.png'
import aaronPhoto from '../../../../public/img/pictures/aaron.png'
import alexandraPhoto from '../../../../public/img/pictures/alexandra.png'
import IconCardWithText from '../../../components/blocks/IconCardWithText.astro';

const lang = "en"
---

<Layout lang={lang} title="About the project">
	<Header lang={lang}/>
	<main class="bg-gradient-to-br from-[#465FFF] to-[#FFFFFF] max-w-3xl md:max-w-none" transition:animate="slide">
		<br/>
		<BigTitle titleText="The team" extraCss="text-center"/>
		<Paragraph text="Meet the passionate team that makes this community possible." extraCss="text-center"/>
		<br/>
		<div class="md:grid md:grid-cols-3 grid-cols-1 md:grid-rows-1 gap-16 mx-auto content-center w-5/6 md:w-2/3 p-6 rounded-3xl">
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={olmoPhoto} photoAltText="Olmo Rayón" name="Olmo Rayón" position="President & Coordination Responsible" linkedinLink="https://www.linkedin.com/in/olmorayon/"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={lauraPhoto} photoAltText="Laura Del Barrio" name="Laura Del Barrio" position="Secretary & Operations Responsible" linkedinLink="https://www.linkedin.com/in/laura-del-barrio-diaz/"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={eduPhoto} photoAltText="Eduard Xancó" name="Eduard Xancó" position="Treasurer & Corporate Responsible" linkedinLink="https://www.linkedin.com/in/eduardxanco/"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={eliasPhoto} photoAltText="Elías Solana" name="Elías Solana" position="External Relations" linkedinLink="https://www.linkedin.com/in/elias-solana/"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={ivanPhoto} photoAltText="Iván Mendez" name="Iván Mendez" position="Content creator" linkedinLink="https://www.linkedin.com/in/ivanmendezrodriguez/"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={neusPhoto} photoAltText="Neus Boix" name="Neus Boix" position="Operations Support" linkedinLink="https://www.linkedin.com/in/nbc-1885aa108"/>
			</div>
			<div class="pb-6 md:pb-0">
				<TeamMemberCard photo={aaronPhoto} photoAltText="Aarón Simón" name="Aarón Simón" position="Legal" linkedinLink="https://www.linkedin.com/in/aaronsimonbrown"/>
			</div>
			<div>
				<TeamMemberCard photo={alexandraPhoto} photoAltText="Alexandra Voicu" name="Alexandra Voicu" position="Operations Support" linkedinLink="https://www.linkedin.com/in/alexandra-voicu-92786563"/>
			</div>
		</div>
		<br/>
		<div class="w-5/6 md:w-2/3 mx-auto mb-16">
			<div class="mx-auto md:py-16 md:px-32 content-center w-auto p-4 md:p-6 rounded-3xl flex flex-col items-center bg-gradient-to-br from-[#465FFF] to-[#837EDC]">
				<MediumTitle titleText="Objectives" extraCss="text-center"/>
				<Paragraph text="Our organization and our community are based on the following objectives:" extraCss="text-center"/>
				<br/>
				<div class="grid md:grid-cols-3 grid-cols-1 md:grid-rows-2 gap-8 mx-auto content-center w-full p-6 rounded-3xl">
					<IconCardWithText iconName="image" text="Recognized brand"/>
					<IconCardWithText iconName="compass" text="One mind"/>
					<IconCardWithText iconName="handshake" text="Strong community"/>
					<IconCardWithText iconName="map" text="Sustainable organization"/>
					<IconCardWithText iconName="compass" text="Best-in-class products"/>
				</div>
			</div>
		</div>
		<br/>
	</main>
	<Footer lang={lang}/>
</Layout>
