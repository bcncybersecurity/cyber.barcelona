---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/screens/Header.astro';
import Footer from '../../../components/screens/Footer.astro';
import BigTitle from '../../../components/primitives/text/BigTitle.astro';
import MediumTitle from '../../../components/primitives/text/MediumTitle.astro';
import SmallTitle from '../../../components/primitives/text/SmallTitle.astro';
import Paragraph from '../../../components/primitives/text/Paragraph.astro';
import { Image } from 'astro:assets';

import EventCard from "../../../components/blocks/EventCard.astro";
import { events } from "../../../data/events.ts";
import UpcomingEventPhoto from '../../../../public/img/events/summer-break-2024.webp'

const lang = "en"
---

<Layout lang={lang} title="Events">
	<Header lang={lang}/>
	<main class="bg-gradient-to-br from-[#465FFF] to-[#FFFFFF] max-w-7xl md:max-w-none">
		<br/>
		<BigTitle titleText="Events" extraCss="text-center"/>

		<br/>
		<Paragraph text="Welcome to the exciting world of cybersecurity events organized by our organization. We are committed to creating a unique space where professionals, enthusiasts and experts can come together and share their passion for cybersecurity. From meetups and trainingsâ€¦ to corporate and networking events, are you going to miss it?" extraCss="max-w-7xl text-center md:px-0 px-6"/>
		<br/>
		<br/>
		<BigTitle titleText="Upcoming event" extraCss="text-center"/>
		<div class="hidden">
			<br/>
			<SmallTitle titleText="Nothing here for now. Stay tuned!" extraCss="text-center"/>
		</div>
		<div class="mx-4 max-w-6xl grid md:grid-cols-[3.5fr,0.1fr,3fr] md:grid-rows-1 gap-4 md:mx-auto content-center p-6 md:p-12 rounded-3xl bg-gradient-to-br from-[#3E37C9] to-[#000000]">
			<div>
				<a href="https://www.meetup.com/es-ES/barcelona-cybersecurity/events/301022964/" target="blank">
					<MediumTitle titleText="Barcelona Cybersecurity - Summer Break Event" extraCss="text-left underline"/>
				</a>
				<Paragraph text="Saturday June 8th, 12:00, Aticco Bogatell" extraCss="text-justify"/>
			</div>
			<div class="hidden md:inline"/>
			<div class="my-1 md:my-auto h-auto">
				<Image class="rounded-3xl w-full mx-auto" src={UpcomingEventPhoto} alt="Barcelona cybersecurity event photo"/>
			</div>
		</div>
		<br/>
		<BigTitle titleText="Past events" extraCss="text-center mx-2 md:mx-auto"/>
		<Paragraph text="Explore all the events organized by Barcelona Cybersecurity! Join us and be part of the growth and strengthening of the cybersecurity industry!" extraCss="max-w-7xl text-center md:px-0 px-6"/>
		<div
		class="max-w-[1100px] m-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6"
	>
		{
			events
				.sort((event1, event2) => (event1.id > event2.id ? -1 : 1))
				.map((event) => (
					<EventCard
						title={event.title}
						url={event.url}
						imgSrc={event.imgSrc}
						imgAltText={event.imgAltText}
					/>
				))
		}
	</div>
	</main>
	<Footer lang={lang}/>
</Layout>
