---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/screens/Header.astro';
import Footer from '../../../components/screens/Footer.astro';
import BigTitle from '../../../components/primitives/text/BigTitle.astro';
import MediumTitle from '../../../components/primitives/text/MediumTitle.astro';
import SmallTitle from '../../../components/primitives/text/SmallTitle.astro';
import Paragraph from '../../../components/primitives/text/Paragraph.astro';
import { Image } from 'astro:assets';


import EventCard from "../../../components/blocks/EventCard.astro";
import { events } from "../../../data/events.ts";
import UpcomingEventPhoto from '../../../../public/img/events/summer-break-2024.webp'


const lang = "es"
---

<Layout lang={lang} title="Eventos">
	<Header lang={lang}/>
	<main class="bg-gradient-to-br from-[#465FFF] to-[#FFFFFF] max-w-7xl md:max-w-none">
		<br/>
		<BigTitle titleText="Eventos" extraCss="text-center"/>

		<br/>
		<Paragraph text="Te damos la bienvenida al apasionante mundo de los eventos sobre ciberseguridad organizados por Barcelona Cybersecurity. Nos comprometemos a crear un espacio único donde profesionales, entusiastas y expertos puedan reunirse y compartir su pasión por la ciberseguridad. Desde meetups y formaciones hasta eventos corporativos y de networking, ¿te lo vas a perder?" extraCss="max-w-7xl text-center md:px-0 px-6"/>
		<br/>
		<br/>
		<BigTitle titleText="Próximo evento" extraCss="text-center"/>
		<div class="hidden">
			<br/>
			<SmallTitle titleText="Nada por aquí de momento. Mantente alerta!" extraCss="text-center"/>
		</div>
		<div class="mx-4 max-w-6xl grid md:grid-cols-[3.5fr,0.1fr,3fr] md:grid-rows-1 gap-4 md:mx-auto content-center p-6 md:p-12 rounded-3xl bg-gradient-to-br from-[#3E37C9] to-[#000000]">
			<div>
				<a href="https://www.meetup.com/es-ES/barcelona-cybersecurity/events/301022964/" target="blank">
					<MediumTitle titleText="" extraCss="text-left underline"/>
				</a>
				<Paragraph text="Sábado 8 de Junio, 12:00, Aticco Bogatell" extraCss="text-justify"/>
			</div>
			<div class="hidden md:inline"/>
			<div class="my-1 md:my-auto h-auto">
				<Image class="rounded-3xl w-full mx-auto" src={UpcomingEventPhoto} alt="Barcelona cybersecurity event photo"/>
			</div>
		</div>
		<br/>
		<BigTitle titleText="Eventos pasados" extraCss="text-center mx-2 md:mx-auto"/>
		<Paragraph text="¡Explora todos los eventos organizados por Barcelona Cybersecurity! ¡Únete a nosotros y forma parte del crecimiento de la industria de la ciberseguridad!" extraCss="max-w-7xl text-center md:px-0 px-6"/>
	
		<div
		class="max-w-[1100px] m-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6"
	>
		{
			events
				.sort((event1, event2) => (event1.id > event2.id ? -1 : 1))
				.map((event) => (
					<EventCard
						title={event.title}
						url={event.url}
						imgSrc={event.imgSrc}
						imgAltText={event.imgAltText}
					/>
				))
		}
	</div>
	</main>
	<Footer lang={lang}/>
</Layout>
