---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/screens/Header.astro';
import Footer from '../../components/screens/Footer.astro';
import MediumTitle from '../../components/primitives/text/MediumTitle.astro';
import Paragraph from '../../components/primitives/text/Paragraph.astro';
import { Image } from 'astro:assets';
import build38Logo from "../../../public/img/sponsors/build38.png"
import innoITLogo from "../../../public/img/sponsors/innoit.png"
import siemensLogo from "../../../public/img/sponsors/siemens.png"
import ValuesPhoto from "../../../public/img/pictures/bcncyber-meeting-room.jpeg"
import IconCardWithTitleSubtitle from '../../components/blocks/IconCardWithTitleSubtitle.astro';
import CallToAction from '../../components/blocks/CallToAction.astro';
import SmallTitle from '../../components/primitives/text/SmallTitle.astro';
import SkylineGraphic from '../../components/ui/SkylineGraphic.astro';
const lang = "es"
---

<Layout lang={lang} title="Barcelona Cybersecurity">
	<Header lang={lang}/>
	<main class="bg-gradient-to-br from-[#465FFF] to-[#A8ACFF] md:max-w-none">
		<br/>
		<SkylineGraphic />
		<MediumTitle titleText="La comunidad de ciberseguridad en Barcelona" extraCss="text-center p-4 pb-1 md:p-0"/>
		<SmallTitle titleText="Somos la NGO que inspira el liderazgo de ciberseguridad y privacidad del futuro." extraCss="text-center p-4 md:p-0"/>
		<br/>
			<div class="max-w-6xl mx-auto mb-16">
				<CallToAction title="¿Quieres ser parte de la comunidad?" subtitle="¡Te esperan nuevas ideas de proyecto!" buttonText="¡Quiero unirme!" buttonLink="/es/hazte-miembro/"/>
			</div>
			<MediumTitle titleText="Nuestros valores" extraCss="text-center"/>
			<div class="md:grid md:grid-cols-2 md:grid-rows-1 md:gap-4 mx-auto content-center w-4/5 p-6">
				<div class="my-auto md:ml-16">
					<Image class="rounded-3xl md:w-4/5 mx-auto" src={ValuesPhoto} alt="Barcelona cybersecurity final event group photo"/>
				</div>
				<div class="mt-8">
					<div class="md:ml-16">
						<IconCardWithTitleSubtitle iconName="eye" title="Nuestra visión" subtitle="Expandir el conocimiento de ciberseguridad en España"/>
					</div>
					<br/>
					<div class="md:mr-16">
						<IconCardWithTitleSubtitle iconName="compass" title="Nuestra misión" subtitle="Crear una comunidad donde entusiastas de la ciberseguridad se reúnan para compartir conocimientos e inspirar a líderes de seguridad del futuro."/>
					</div>
				</div>
				<br/>
			</div>
			<MediumTitle titleText="Nuestra comunidad, en cifras" extraCss="text-center p-4 md:p-0"/>
			<br/>
			<div class="md:grid md:grid-rows-1 md:grid-cols-[3.5fr,0.5fr,1fr,1fr,1fr] md:gap-4 mx-auto content-center w-4/5 px-6 pt-6 rounded-3xl bg-gradient-to-br from-[#3E37C9] to-[#000000]">
				<div>
					<MediumTitle titleText="Nuestra comunidad de Meetup nació en 2016." extraCss="text-left"/>
					<Paragraph text="Desde entonces hemos organizado más de 40 eventos" extraCss="text-justify md:pb-4 pb-6"/>
				</div>
				<div class="hidden md:inline"/>
				<div class="my-1 md:my-auto h-auto md:pb-0 pb-6">
					<MediumTitle titleText="1200" extraCss="text-left"/>
					<Paragraph text="Miembros" extraCss="text-left"/>
				</div>
				<div class="my-1 md:my-auto h-auto md:pb-0 pb-6">
					<MediumTitle titleText="30" extraCss="text-left"/>
					<Paragraph text="Colaboraciones" extraCss="text-left"/>
				</div>
				<div class="my-1 md:my-auto h-auto md:pb-0 pb-4">
					<MediumTitle titleText="50+" extraCss="text-left"/>
					<Paragraph text="Ponentes" extraCss="text-left"/>
				</div>
			</div>
			<br/>
			<br/>
			<MediumTitle titleText="Con soporte de los mejores" extraCss="text-center p-4 md:p-0"/>
			<div class="md:grid md:grid-cols-2 grid-cols-1 md:grid-rows-1 gap-16 mx-auto content-center w-5/6 md:w-2/3 p-6">
				<Image class="w-4/5 mx-auto pb-4" src={build38Logo} alt="Build38 logo"/>
				<Image class="w-4/5 mx-auto pb-4" src={innoITLogo} alt="InnoIT consulting logo"/>
				<Image class="w-4/5 mx-auto pb-4 hidden" src={siemensLogo} alt="Siemens Healthineers logo"/>
			</div>
			<br/>
		<br>
	</main>
	<Footer lang={lang}/>
</Layout>
