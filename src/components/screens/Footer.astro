---
const { lang } = Astro.props;
const homeLink = "/" + lang + "/";
const slugTranslations = {
  DataProtectionPolicyLink: {
    en: "/en/data-protection-policy",
    es: "/es/politica-de-proteccion-de-datos",
  },
  AboutTheProjectLink: {
    en: "/en/about-the-project",
    es: "/es/sobre-el-proyecto",
  },
  WhatWeDoLink: {
    en: "/en/what-we-do",
    es: "/es/que-hacemos",
  },
  EventsLink: {
    en: "/en/events",
    es: "/es/eventos",
  },
  JoinLink: {
    en: "/en/become-a-member/",
    es: "/es/hazte-miembro",
  },
  BlogLink: {
    en: "/en/blog",
    es: "/es/blog",
  },
};

function getSlugTranslation(
  key: keyof typeof slugTranslations,
  lang: "en" | "es",
): string {
  return slugTranslations[key][lang];
}

let dataProtectionPolicyLink = getSlugTranslation(
  "DataProtectionPolicyLink",
  lang,
);
let aboutTheProjectLink = getSlugTranslation("AboutTheProjectLink", lang);
let whatWeDoLink = getSlugTranslation("WhatWeDoLink", lang);
let eventsLink = getSlugTranslation("EventsLink", lang);
let joinLink = getSlugTranslation("JoinLink", lang);
let blogLink = getSlugTranslation("BlogLink", lang);

const stringTranslations = {
  DataProtectionPolicyString: {
    en: "Data protection policy",
    es: "Política de protección de datos",
  },
  AboutTheProjectString: {
    en: "About the project",
    es: "Sobre el proyecto",
  },
  WhatWeDoString: {
    en: "What we do",
    es: "Qué hacemos",
  },
  ContactString: {
    en: "Contact us",
    es: "Contacta con nosotros",
  },
  EventsString: {
    en: "Events",
    es: "Eventos",
  },
  JoinString: {
    en: "Join the community",
    es: "Hazte Miembro",
  },
  BlogString: {
    en: "Blog",
    es: "Blog",
  },
};

function getStringTranslation(
  key: keyof typeof stringTranslations,
  lang: "en" | "es",
): string {
  return stringTranslations[key][lang];
}

let dataProtectionPolicyString = getStringTranslation(
  "DataProtectionPolicyString",
  lang,
);
let aboutTheProjectString = getStringTranslation("AboutTheProjectString", lang);
let whatWeDoString = getStringTranslation("WhatWeDoString", lang);
let ContactString = getStringTranslation("ContactString", lang);
let EventsString = getStringTranslation("EventsString", lang);
let JoinString = getStringTranslation("JoinString", lang);
let BlogString = getStringTranslation("BlogString", lang);
---

