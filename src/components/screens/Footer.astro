---
const { lang } = Astro.props;
const homeLink = "/" + lang + "/"
const slugTranslations = {
  DataProtectionPolicyLink: {
    en: "/en/data-protection-policy",
    es: "/es/politica-de-proteccion-de-datos"
  },
  AboutTheProjectLink: {
    en: "/en/about-the-project",
    es: "/es/sobre-el-proyecto"
  }
}

function getSlugTranslation(key: keyof typeof slugTranslations, lang: 'en' | 'es'): string {
  return slugTranslations[key][lang];
}

let dataProtectionPolicyLink = getSlugTranslation('DataProtectionPolicyLink', lang);
let aboutTheProjectLink = getSlugTranslation('AboutTheProjectLink', lang);

const stringTranslations = {
  DataProtectionPolicyString: {
    en: "Data protection policy",
    es: "Política de protección de datos"
  },
  AboutTheProjectString: {
    en: "About the project",
    es: "Sobre el proyecto"
  },
  ContactString: {
    en: "Contact us",
    es: "Contacta con nosotros"
  },
  RightsReservedString: {
    en: "All rights reserved",
    es: "Todos los derechos reservados"
  }
}

function getStringTranslation(key: keyof typeof stringTranslations, lang: 'en' | 'es'): string {
  return stringTranslations[key][lang];
}

let dataProtectionPolicyString = getStringTranslation('DataProtectionPolicyString', lang);
let aboutTheProjectString = getStringTranslation('AboutTheProjectString', lang);
let ContactString = getStringTranslation('ContactString', lang);
let RightsReservedString = getStringTranslation('RightsReservedString', lang);
---

