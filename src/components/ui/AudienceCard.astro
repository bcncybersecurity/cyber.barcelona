---
const { photo, photoAltText, title, subtitle } = Astro.props;
import { Image } from 'astro:assets';
import Card from './Card.astro';
---

<Card>
    <Image class="w-full mx-auto rounded-t-lg grayscale mb-4" src={photo} alt={photoAltText}/>
    <h3>{title}</h3>
    <p class="text-gray">{subtitle}</p>
</Card>