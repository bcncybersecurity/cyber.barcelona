---
const { photo, photoAltText, name, position, linkedinLink } = Astro.props;
import { Image } from "astro:assets";
import SmallTitle from "../primitives/text/SmallTitle.astro";
import Paragraph from "../primitives/text/Paragraph.astro";
---

<div class="mx-auto w-auto content-center rounded-3xl bg-[#E3E0FA] p-6">
  <Image class="mx-auto rounded-3xl md:w-2/3" src={photo} alt={photoAltText} />
  <br />
  <SmallTitle titleText={name} extraCss="text-[#3E37C9] text-center" />
  <Paragraph text={position} extraCss="text-[#3E37C9] text-center" />

  <a
    target="_blank"
    href={linkedinLink}
    class="mx-auto mb-4 mt-3 flex items-center space-x-3 rounded-xl border bg-[#465FFF] px-4 py-2 font-bold text-white hover:bg-white hover:text-[#465FFF] hover:transition sm:mb-0 sm:w-full rtl:space-x-reverse"
  >
    <div class="mx-auto flex items-center">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="currentColor"
        class="bi bi-linkedin"
        viewBox="0 0 16 16"
      >
        <path
          d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401m-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4"
        ></path>
      </svg>
      <span
        class="hidden self-center whitespace-nowrap text-2xl font-semibold xl:block"
        >&nbsp Connect</span
      >
    </div>
  </a>
</div>
